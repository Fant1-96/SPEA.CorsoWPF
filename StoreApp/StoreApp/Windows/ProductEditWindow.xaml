<Window x:Class="StoreApp.ProductEditWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Prodotto" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Nome"/>
            <TextBox x:Name="NameBox"/>
            <Label Content="Prezzo"/>
            <TextBox x:Name="PriceBox"/>
            <Button Content="Salva" Margin="0,10,0,0" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
