<Window x:Class="StoreApp.OrderEditWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Ordine" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Utente"/>
            <ComboBox x:Name="UserCombo" DisplayMemberPath="UserName"/>
            <Label Content="Prodotti"/>
            <ListBox x:Name="ProductsList" SelectionMode="Extended" DisplayMemberPath="Name" Height="200"/>
            <Button Content="Salva" Margin="0,10,0,0" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>